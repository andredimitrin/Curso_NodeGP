<%- include('partials/header.ejs') %>

<body>
    <%- include('partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h1><%- pergunta.titulo %></h1>
        <p><%- pergunta.descricao %></p>
        <hr>
        <form action="/responder" method="POST">
            <h3>Responda</h3>
            <label>Resposta:</label>
            <textarea placeholder="Digite sua resposta" name="corpo" class="form-control"></textarea><br>
            <input type="hidden" name="pergunta" value="<%- pergunta.id %>">
            <button type="submit" class="btn btn-secondary">Enviar</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => {%>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%- resposta.corpo %></p>
                </div>
            </div>
        
        <% }) %>
        <br>
    </div>
</body>