<div class="container">
    <div class="card" id="formulario-pergunta">
        <div class="card-header">
            <h3>Realizar Pergunta</h3>
        </div>
        <div class="card-body">
            <form method="POST" action="/salvarpergunta">
                <label for="titulo">Título</label>
                <input type="text" name="titulo" placeholder="Título" class="form-control">
                <br>
                <label for="descricao">Descrição</label>
                <textarea name="descricao" placeholder="Descreva sua pergunta aqui" class="form-control"></textarea>
                <br>
                <button type="submit" class="btn btn-outline-dark">Perguntar</button>
            </form>
        </div>
    </div>
</div>
